<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
  <targets>
    <target name="file" xsi:type="File" fileName="${basedir}/Logs/CoffeeShop.log" layout="${longdate}|${level}|${message} ${onexception:${exception:format=tostring} | ${stacktrace}}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="file" />
  </rules>
</nlog>
